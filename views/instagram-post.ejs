                  <div class="download-section">
                     <h1>Instagram Post Download</h1>
   
                     <form class="form" action="/instagram/post" method="POST">
                        <label hidden for="link">Link</label>
                        <input required class="input" type="url" placeholder="Paste your video link  here" id="link" name="link">
                        <button class="btn-submit" type="submit">Download</button>
                     </form>
                     <div class="guide">
                        <a class="guide-link" href="#">How to download</a>
                     </div>
                     <% if(data) { %>
                        <div class="video-box">
                           <video width="270" height="480" controls >
                              <source src=" <%= data %> ">
                           </video>
                           <a target="_blank" download class="save-btn" href=" <%= data %> ">Download</a>
                        </div>
                     <% } %> 

                  </div>
